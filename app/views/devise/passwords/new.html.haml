#content.flex.column.center
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'container content pad-xl depth-2' }) do |f|
    %h2 Forgot your password?
    = devise_error_messages!
    .field
      = f.email_field :email, autofocus: true, placeholder: t('instruction.enter-email')
    .field
      = f.submit "Send me reset password instructions", class: 'btn btn-huge btn-tigerlily'
    .text-center
      = render "devise/shared/links"